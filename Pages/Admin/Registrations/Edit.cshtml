@page
@model losol.EventManagement.Pages.Admin.Registrations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Registration.RegistrationId" />
            <div class="form-group">
                <label asp-for="Registration.EventInfoId" class="control-label"></label>
                <select asp-for="Registration.EventInfoId" class="form-control" asp-items="ViewBag.EventInfoId"></select>
                <span asp-validation-for="Registration.EventInfoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.UserId" class="control-label"></label>
                <select asp-for="Registration.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Registration.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.RegistrationType" class="control-label"></label>
                <input asp-for="Registration.RegistrationType" class="form-control" />
                <span asp-validation-for="Registration.RegistrationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Registration.Attended" /> @Html.DisplayNameFor(model => model.Attended)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Registration.Diploma" /> @Html.DisplayNameFor(model => model.Diploma)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Registration.Notes" class="control-label"></label>
                <input asp-for="Registration.Notes" class="form-control" />
                <span asp-validation-for="Registration.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.RegistrationTime" class="control-label"></label>
                <input asp-for="Registration.RegistrationTime" class="form-control" />
                <span asp-validation-for="Registration.RegistrationTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.RegistrationBy" class="control-label"></label>
                <input asp-for="Registration.RegistrationBy" class="form-control" />
                <span asp-validation-for="Registration.RegistrationBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Registration.FreeRegistration" /> @Html.DisplayNameFor(model => model.FreeRegistration)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Registration.PaymentMethod" class="control-label"></label>
                <input asp-for="Registration.PaymentMethod" class="form-control" />
                <span asp-validation-for="Registration.PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
