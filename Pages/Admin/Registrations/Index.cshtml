                <th>
                    @Html.DisplayNameFor(model => model.Registration[0].Diploma)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Registration[0].Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Registration[0].RegistrationTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Registration[0].RegistrationBy)
