@using Microsoft.AspNetCore.Identity
@using losol.EventManagement.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav navbar-right">
                    <li class="nav-item">
                <a asp-page="/Account/Manage/Index" class="nav-link" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
                    <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn nav-link">Logg ut</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
                <li class="nav-item"><a asp-page="/Account/Register">Register</a></li>
                <li class="nav-item"><a asp-page="/Account/Login">Log in</a></li>
    </ul>
}
